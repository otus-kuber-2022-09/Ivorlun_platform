apiVersion: batch/v1
kind: Job
metadata:
  namespace: {{ namespace }}
  name: backup-{{ name }}-job
  labels:
    usage: backup-{{ name }}-job
spec:
  template:
    metadata:
      name: backup-{{ name }}-cronjob
    spec:
      restartPolicy: OnFailure
      containers:
      - name: backup-{{ name }}
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        env:
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: {{ name }}-secret
              key: password
        command:
        - /bin/sh
        - -c
        - "mysqldump -u root -h {{ name }} -p$MYSQL_ROOT_PASSWORD {{ database }}  > /backup-{{ name }}-pv/{{ name }}-dump.sql"
        volumeMounts:
        - name: backup-{{ name }}-pv
          mountPath: /backup-{{ name }}-pv
      volumes:
      - name: backup-{{ name }}-pv
        persistentVolumeClaim:
          claimName: backup-{{ name }}-pvc

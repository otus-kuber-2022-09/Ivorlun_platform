apiVersion: v1
kind: PersistentVolume
metadata:
  name:  "backup-{{ name }}-pv"
  labels:
    pv-usage: "backup-{{ name }}"
spec:
  storageClassName: {{ storage_class }}
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /data/pv-backup/
